            </li>
            <li Class="FabledCervidae.CompProperties_MaleAntlers">
                <adultAntlerVariantCount>1</adultAntlerVariantCount>
                <juvenileAntlerVariantCount>1</juvenileAntlerVariantCount>
            </li>
        </comps>
        <modExtensions>
